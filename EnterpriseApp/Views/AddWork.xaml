            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="67,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="47"><Run Text="Name"/><Run Text=" :"/></TextBlock>
