                Margin="151,269,0,0" VerticalAlignment="Top" 
                Width="75" Name="Add" Click="Add_Click"/>

        <TextBlock HorizontalAlignment="Left" Margin="174,21,0,0" 
                   TextWrapping="Wrap" VerticalAlignment="Top" 
                   Height="16" Width="94"><Run Text="Add a New "/><Run Text="Work"/></TextBlock>

        <TextBlock HorizontalAlignment="Left" Margin="67,220,0,0" 
                   TextWrapping="Wrap" VerticalAlignment="Top" 
                   Height="16" Width="47"><Run Text="User Id"/><Run Text=" :"/></TextBlock>
        
        <ComboBox HorizontalAlignment="Left" Margin="221,218,0,0" 
                  VerticalAlignment="Top" Width="120"
                  Name="UserIdList"/>

    </Grid>

</Window>
